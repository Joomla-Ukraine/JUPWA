<project name="jupwa" default="dist" basedir=".">

    <property name="VERSION" value="1.0"/>
    <property name="JOOMLA" value="4.2"/>

    <tstamp>
        <format property="DATE" pattern="%d.%m.%Y" />
    </tstamp>

    <property name="build" value="build"/>
    <property name="temp" value="temp"/>
    <property name="dist" value="dist"/>

    <property name="filename" value="plg_system_jupwa_v${VERSION}.zip"/>

    <target name="init" depends="clean">
        <mkdir dir="${build}"/>
        <mkdir dir="${temp}"/>
        <mkdir dir="${dist}"/>
    </target>

    <target name="temp">

        <copy todir="${temp}">
            <fileset dir="packages">
                <include name="**"/>
            </fileset>
        </copy>

    </target>

    <target name="replace">

        <copy file="packages/plg_system_jupwa/jupwa.xml" todir="${temp}/temp/plg_system_jupwa">
            <filterchain>
                <replacetokens>
                    <token key="version" value="${VERSION}" />
                    <token key="date" value="${DATE}" />
                </replacetokens>
            </filterchain>
        </copy>

        <delete file="${temp}/plg_system_jupwa/jupwa.xml"/>
        <copy file="${temp}/temp/plg_system_jupwa/jupwa.xml" todir="${temp}/plg_system_jupwa"/>


    </target>

    <target name="pack-plugins">

        <mkdir dir="${build}/packages"/>

        <zip destfile="${build}/packages/plg_system_jupwa.zip" description="plg_system_jupwa">
            <fileset dir="${temp}/plg_system_jupwa"/>
        </zip>

        <copy file="plg_system_jupwa.xml" todir="${build}"/>

        <copy file="script.php" todir="${build}"/>

    </target>

    <target name="dist" depends="init, temp, replace, pack-plugins">
        <zip destfile="${dist}/${filename}">
            <fileset dir="${build}/">
                <include name="**/**"/>
            </fileset>
        </zip>

        <echo msg="Removing old files..."/>
        <delete dir="${build}"/>
        <delete dir="${temp}"/>

    </target>

    <target name="clean" description="clean up">

        <delete dir="${build}"/>
        <delete dir="${temp}"/>

    </target>

</project>
