<?xml version="1.0" encoding="utf-8"?>
<extension version="4.0"
           type="plugin"
           group="jupwa"
           method="upgrade">
	<name>plg_jupwa_content</name>
	<creationDate>@date@</creationDate>
	<copyright>(C) 2023 Denys Nosov, Joomla! Ukraine</copyright>
	<license>GNU/GPL Version 2 or later and Creative Commons Attribution-Noncommercial-No Derivative Works 3.0 License</license>
    <author>Denys Nosov, Joomla! Ukraine</author>
    <authorEmail>denys@joomla-ua.org</authorEmail>
    <authorUrl>https://joomla-ua.org</authorUrl>
    <version>@version@</version>
	<description>PLG_JUPWA_CONTENT_XML_DESCRIPTION</description>

	<files>
		<filename plugin="content">content.php</filename>
	</files>

	<languages>
        <language tag="en-GB">language/en-GB.plg_jupwa_content.ini</language>
        <language tag="en-GB">language/en-GB.plg_jupwa_content.sys.ini</language>
    </languages>

	 <config>
        <fields name="params">

            <fieldset name="Basic">

	            <fieldset name="META">

	                <field name="usemeta"
	                       type="radio"
	                       layout="joomla.form.field.radio.switcher"
	                       default="1"
	                       label="PLG_JUPWA_CONTENT_USEMETA"
	                >
	                    <option value="0">JNO</option>
	                    <option value="1">JYES</option>
	                </field>

	            </fieldset>

	            <fieldset name="OG">

		            <field name="og_type_website"
		                   type="radio"
		                   layout="joomla.form.field.radio.switcher"
		                   default="0"
		                   label="PLG_JUPWA_USE_OG_TYPE_WEBSITE"
		            >
	                    <option value="0">JNO</option>
	                    <option value="1">JYES</option>
	                </field>

		            <field name="og_website_menus"
		                   type="menuitem"
		                   multiple="true"
		                   size="15"
		                   state="1"
		                   published="1"
		                   label="PLG_JUPWA_CONTENT_MENU_ITEM"
		                   showon="og_type_website:1"
		            />

	            </fieldset>

	            <fieldset name="SCHEMA_ARTICLE">

		            <field name="schema_article"
		                   type="menuitem"
		                   multiple="true"
		                   size="15"
		                   state="1"
		                   published="1"
		                   label="PLG_JUPWA_CONTENT_MENU_ITEM"
		            />

		            <field name="schema_article_person"
		                   type="text"
		                   label="PLG_JUPWA_CONTENT_SCHEMA_ARTICLE_PERSON"
		            />

	            </fieldset>

	            <fieldset name="SCHEMA_NEWS">

		            <field name="schema_news_article"
		                   type="menuitem"
		                   multiple="true"
		                   size="15"
		                   state="1"
		                   published="1"
		                   label="PLG_JUPWA_CONTENT_MENU_ITEM"
		            />

		            <field name="schema_news_article_person"
		                   type="text"
		                   label="PLG_JUPWA_CONTENT_SCHEMA_ARTICLE_PERSON"
		            />

	            </fieldset>

	            <fieldset name="SCHEMA_ARTICLES_BLOGPOSTING">

		            <field name="schema_blogposting"
		                   type="menuitem"
		                   multiple="true"
		                   size="15"
		                   state="1"
		                   published="1"
		                   label="PLG_JUPWA_CONTENT_MENU_ITEM"
		            />

		            <field name="schema_article_blogposting_person"
		                   type="text"
		                   label="PLG_JUPWA_CONTENT_SCHEMA_ARTICLE_PERSON"
		            />

	            </fieldset>

	            <fieldset name="JUPWA_OG">

		            <field name="ogvideo_youtube"
		                   type="radio"
		                   layout="joomla.form.field.radio.switcher"
		                   default="1"
		                   label="PLG_JUPWA_CONTENT_OGVIDEO_YOUTUBE"
		                   showon="og:1"
		            >
						<option value="0">JNO</option>
						<option value="1">JYES</option>
					</field>

	            </fieldset>

            </fieldset>

        </fields>
    </config>
</extension>